<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#252523"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageShow"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/titlefMovie"
        app:layout_constraintStart_toEndOf="@id/imageShow"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Name of film"
        android:layout_marginHorizontal="@dimen/horizont"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titlefMovie"
        app:layout_constraintStart_toEndOf="@id/imageShow"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>